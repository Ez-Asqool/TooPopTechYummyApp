@page
@model RegisterModel
@{
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Register";
}

@*<h1>@ViewData["Title"]</h1>*@

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <!-- Use col-lg-8 for 8 columns wide, and offset-lg-2 to center the form -->
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data" style="max-width: 100%;">
                <hr />
                <h1 style="font-size: 38px;" class="text-primary" >Create a new account.</h1>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="true" placeholder=" " required/>
                            <label asp-for="Input.FirstName">First Name</label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="true" placeholder=" " required />
                            <label asp-for="Input.LastName">Last Name</label>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder=" " required />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                     </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <select asp-for="Input.Role" class="form-control" autocomplete="role" aria-required="true" placeholder=" " required>
                                <option value="Chef">Chef</option>
                                <option value="Administrator">Administrator</option>
                            </select>
                            <label asp-for="Input.Role">Role</label>
                            <span asp-validation-for="Input.Role" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder=" " required />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder=" " required />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <input type="number" asp-for="Input.PhoneNumber" class="form-control" autocomplete="Phone Number" placeholder=" " />
                    <label asp-for="Input.PhoneNumber">Phone Number</label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.JobTitle" class="form-control" autocomplete="Job-Title"  placeholder=" "  />
                    <label asp-for="Input.JobTitle">Job Title</label>
                    <span asp-validation-for="Input.JobTitle" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <textarea style="resize: none; height: 150px;" asp-for="Input.Description" class="form-control" autocomplete="Description" placeholder=" "></textarea>
                    <label asp-for="Input.Description">Description</label>
                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                </div>
                @*<div class="form-floating mb-3">
                    <textarea rows="10" style="resize: none;" asp-for="Input.Description" class="form-control" autocomplete="Description" placeholder=" "></textarea>
                    <label asp-for="Input.Description">Description</label>
                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                </div>*@
                <div class="form-floating mb-3">
                    <input type="file" asp-for="Input.Image" accept="image/*" class="form-control" autocomplete="Image" placeholder=" " />
                    <label asp-for="Input.Image">Image</label>
                    <span asp-validation-for="Input.Image" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>

