<link href="~/css/toast.css" rel="stylesheet" />

<link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.5/dist/sweetalert2.min.css">

<!--toaster-->
<!-- Add jQuery library -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Add Bootstrap's JavaScript library -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

@if (TempData["message"] != null)
{
    <div class="toast align-items-center text-white bg-custom-green border-0 custom-toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body custom-toast-body">
                @TempData["message"]
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>

}
else if (TempData["errormessage"] != null)
{
    <div class="toast align-items-center text-white bg-custom-red border-0 custom-toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body custom-toast-body">
                @TempData["errormessage"]
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
}
<!--toaster-->

<hr />
<div>
    <div class="menu-content px-3 py-3 d-flex justify-content-between">
        <h1 style="font-size: 38px;" class="text-primary">Photo Albums</h1>
        <a id="myButton" class="btn btn-primary btn-sm px-4" style="padding: 10px 20px; font-size: 18px;" data-bs-toggle="modal" data-bs-target="#kt_modal_new_address">Add New Album</a>
    </div>
</div>
<hr />




<div class="container">

    <table id="albums" class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Photo Album Title</th>
                <th>Show To Public</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>

</div>


<div id="ShowModal"></div>

<partial name="Add.cshtml"></partial>



@section Scripts
    {
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>
    <script src="~/js/datatables/GalleryDatatable.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.5/dist/sweetalert2.all.min.js"></script>
    

}


