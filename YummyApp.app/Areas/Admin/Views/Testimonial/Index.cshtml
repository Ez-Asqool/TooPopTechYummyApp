<link href="~/css/toast.css" rel="stylesheet" />

<link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.5/dist/sweetalert2.min.css">

<!--toaster-->
<!-- Add jQuery library -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Add Bootstrap's JavaScript library -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>



@if (TempData["message"] != null)
{
    <div class="toast align-items-center text-white bg-custom-green border-0 custom-toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body custom-toast-body">
                @TempData["message"]
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>


}
<!--toaster-->

<hr />
<div>
    <div class="menu-content px-3 py-3 d-flex justify-content-between">
        <h1 style="font-size: 38px;" class="text-primary">Testimonials</h1>
        <a id="myButton" class="btn btn-primary btn-sm px-4" style="padding: 10px 20px; font-size: 18px;" data-bs-toggle="modal" data-bs-target="#kt_modal_new_address">Add New Testimonial</a>
    </div>
</div>
<hr />




<div class="container">

    <table id="testimonials" class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Job Title</th>
                <th>Stars</th>
                <th>Image</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>

</div>


<partial name="Add.cshtml"></partial>

<div id="ShowModal"></div>

@section Scripts
    {
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>
    <script src="~/js/datatables/testimonialsDatatable.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.5/dist/sweetalert2.all.min.js"></script>

    <script src="~/js/GeneralHandeller.js"></script>

    <script>
        // Show Swal and submit the form for Add event
        showSwalAndSubmitForm("#kt_modal_new_address_form", "#testimonials", "Item has been added successfully.", '/Admin/Testimonial/Add');
        
        ShowAnyModal(".btn-details", "modal", "Admin/Testimonial/Details", "#ShowModal", "#kt_modal_details");

        statusHandeller("#testimonials", '/Admin/Testimonial/EditStatus/');

        deleteHandeller("#testimonials", '/Admin/Testimonial/Delete/');

        updateHandeller("#testimonials", "/Admin/Testimonial/Update", '/Admin/Testimonial/Update/');

    </script>
}


