@{
}

<h1 class="text text-danger">Are You Shure That You Want To Delete This Event ?</h1>
<br />

<form method="post" asp-area="Admin" asp-controller="Event" asp-action="Delete">
    
   

    <div class="form-group">
        <label style="font-size: 22px" asp-for="Title"></label>
        <input  type="text" asp-for="Title" class="form-control" disabled />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <br><br />

    <div class="form-group">
        <label style="font-size: 22px" asp-for="Price"></label>
        <input type="number" asp-for="Price" class="form-control" disabled />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <br><br>

    <div class="form-group">
        <label style="font-size: 22px" asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description" rows="5" placeholder="Description" disabled></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <br><br>
    
   

    

    <div class="form-group">
        <label style="font-size: 22px" >Image</label>
        <img src="~/EventImages/@Model.ImageName" style="max-width:200px;" class="img-thumbnail" />
    </div>

    <br><br>

    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>


     <input type="text" asp-for="ImageName" hidden />

    <input type="number" asp-for="Id" hidden/>

</form>