@model YummyApp.Core.ViewModels.AdminViewModels.UpdateChefVM


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <!-- Use col-lg-8 for 8 columns wide, and offset-lg-2 to center the form -->
            <form id="registerForm"  method="post" enctype="multipart/form-data" style="max-width: 100%;">
                <hr />
                <h1 style="font-size: 38px;" class="text-primary">Update Chef.</h1>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <input type="text" asp-for="Id" hidden />
                <input type="text" asp-for="ImageName" hidden />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="FirstName" class="form-control" autocomplete="firstname" aria-required="true" placeholder=" " required />
                            <label asp-for="FirstName">First Name</label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="LastName" class="form-control" autocomplete="lastname" aria-required="true" placeholder=" " required />
                            <label asp-for="LastName">Last Name</label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder=" " required />
                            <label asp-for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Role" class="form-control" autocomplete="Role" aria-required="true" placeholder=" " required disabled />
                                <label asp-for="Role">Role</label>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="form-floating mb-3">
                    <input type="number" asp-for="PhoneNumber" class="form-control" autocomplete="Phone Number" placeholder=" " />
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="JobTitle" class="form-control" autocomplete="Job-Title" placeholder=" " />
                    <label asp-for="JobTitle">Job Title</label>
                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <textarea style="resize: none; height: 150px;" asp-for="Description" class="form-control" autocomplete="Description" placeholder=" "></textarea>
                    <label asp-for="Description">Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                
                <div class="form-floating mb-3">
                    <img src="~/UserImages/@Model.ImageName" style="width:60px; height:60px;" asp-append-version="true">
                    <input type="file" asp-for="Image" class="form-control" autocomplete="Image" placeholder=" " />
                    <label asp-for="Image">Image</label>
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>



