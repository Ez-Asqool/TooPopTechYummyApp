<!-- ======= Contact Section ======= -->
<section id="contact" class="contact">
    <div class="container" data-aos="fade-up">

    <div class="section-header">
        @*<h2>Contact</h2>*@
            <h2>@_localizer["Contact"]</h2>
            <p>@_localizer["Need Help?"] <span>@_localizer["Contact Us"]</span></p>
    </div>

    <div class="mb-3">
        <iframe style="border:0; width: 100%; height: 350px;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" allowfullscreen></iframe>
    </div><!-- End Google Maps -->

    <div class="row gy-4">

        <div class="col-md-6">
        <div class="info-item  d-flex align-items-center">
            <i class="icon bi bi-map flex-shrink-0"></i>
            <div>
                <h3>@_localizer["Our Address"]</h3>
                <p>A108 Adam Street, New York, NY 535022</p>
            </div>
        </div>
        </div><!-- End Info Item -->

        <div class="col-md-6">
        <div class="info-item d-flex align-items-center">
            <i class="icon bi bi-envelope flex-shrink-0"></i>
            <div>
                <h3>@_localizer["Email Us"]</h3>
                <p>contact@example.com</p>
            </div>
        </div>
        </div><!-- End Info Item -->

        <div class="col-md-6">
        <div class="info-item  d-flex align-items-center">
            <i class="icon bi bi-telephone flex-shrink-0"></i>
            <div>
                <h3>@_localizer["Call Us"]</h3>
                <p>+1 5589 55488 55</p>
            </div>
        </div>
        </div><!-- End Info Item -->

        <div class="col-md-6">
        <div class="info-item  d-flex align-items-center">
            <i class="icon bi bi-share flex-shrink-0"></i>
            <div>
                <h3>@_localizer["Opening Hours"]</h3>
                <div><strong>Mon-Sat:</strong> 11AM - 23PM;
                <strong>Sunday:</strong> Closed
            </div>
            </div>
        </div>
        </div><!-- End Info Item -->

    </div>

    <form method="post" asp-area="" asp-controller="Contact" asp-action="Submit" role="form" class="php-email-form p-3 p-md-4">
        <div class="row">
        <div class="col-xl-6 form-group">
                    <input type="text" asp-for="@Model.Name" class="form-control" id="name" placeholder="@_localizer["Your Name"]" required>
        </div>
        <div class="col-xl-6 form-group">
                    <input type="email" asp-for="@Model.Email" class="form-control" id="email" placeholder="@_localizer["Your Email"]" required>
        </div>
        </div>
        <div class="form-group">
                <input type="text" asp-for="@Model.Subject" class="form-control" name="subject" id="subject" placeholder="@_localizer["Subject"]" required>
        </div>
        <div class="form-group">
                <textarea class="form-control" asp-for="@Model.Message" rows="5" placeholder="@_localizer["Message"]" required></textarea>
        </div>
        <div class="my-3">
           @*  @if(ViewBag.msg == "error"){*@
                <div class="loading">Loading</div>
                <div class="error-message"></div>
            @*}*@
            @*@if(ViewBag.msg == "success"){*@
                <div class="sent-message">@_localizer["Your message has been sent. Thank you!"]</div>
           @* } *@  
        </div>

            <div class="text-center"><button type="submit">@_localizer["Send Message"]</button></div>
    </form>
    <!--End Contact Form -->

    </div>
</section><!-- End Contact Section -->